<script>
  // ‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á
  const correctAnswers = {
    q1: "c",
    q2: "b",
    q3: "d",
    q4: "a",
    q5: "all"
  };

  function getQueryParams() {
    const params = {};
    location.search.substring(1).split("&").forEach(pair => {
      const [key, value] = pair.split("=");
      params[key] = decodeURIComponent(value || "");
    });
    return params;
  }

  const userAnswers = getQueryParams();
  let score = 0;
  const total = Object.keys(correctAnswers).length;

  for (const q in correctAnswers) {
    const ans = userAnswers[q];
    if (!ans) continue;
    if (correctAnswers[q] === "all") {
      score++;
    } else if (ans === correctAnswers[q]) {
      score++;
    }
  }

  document.getElementById("score").textContent = `‡∏Ñ‡∏∏‡∏ì‡πÑ‡∏î‡πâ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô ${score} / ${total}`;
</script>

